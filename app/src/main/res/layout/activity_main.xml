            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_03"
            android:background="#d0ff85"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_04"
            android:background="#86e5ff"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_05"
            android:background="#cdd2f2"
